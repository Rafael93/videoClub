<p id="notice"><%= notice %></p>

<div id="header" style="display: flex; justify-content: space-between;">
  <h1>Peliculas</h1>
  <div id="search_">
      <%=form_tag(movies_path, method: "get") do %>
      <%=text_field_tag :search, params[:search] %>
      <%=submit_tag "Buscar", :class=>'btn btn-primary' %>
      <% end %>
  </div>
</div>

<table class="table table-primary table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Year</th>
      <th scope="col">Producer</th>
      <th scope="col">Release date</th>
    </tr>
  </thead>

  <tbody>
    <% @movie_list.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.category.name %></td>
        <td><%= movie.year %></td>
        <td><%= movie.producer.name %></td>
        <td><%= movie.release_date %></td>
        <td><%= link_to image_tag("eye-fill"), movie %></td>
        <td><%= link_to image_tag("pencil-square"), edit_movie_path(movie) %></td>
        <td><%= link_to image_tag("trash"), movie_path(movie), data: { turbo_method: "delete", turbo_confirm: 'Confirmar?' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path, class:"btn btn-primary" %>

